<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.singing"
      tal:omit-tag="">

  <div class="portalMessage"
       tal:condition="view/status" tal:content="view/status">
  </div>

  <tal:block repeat="form view/subforms">
    <div class="form" 
         tal:define="render_form python:getattr(form, 'render_form_tag', None)"
         tal:attributes="class python:render_form and 'form' or None">

      <form action="." method="post"
            tal:attributes="action request/getURL"
            tal:content="structure form/render"
            tal:omit-tag="not:render_form">
      </form>

    </div>
  </tal:block>

  <div class="action" tal:repeat="action view/actions/values">
    <input type="submit" tal:replace="structure action/render" />
  </div>

</html>
